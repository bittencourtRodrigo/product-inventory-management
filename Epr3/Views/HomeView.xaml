<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Epr3.Views.HomeView"
             Title="HomeView">
    <Grid RowSpacing="10" RowDefinitions="Auto, Auto" ColumnDefinitions="*, *, *" Padding="10" ColumnSpacing="10">
        <ImageButton
            Grid.Column="0"
            Grid.Row="0"
            Source="catalog.png"
            Command="{Binding NavigateToCatalogProductViewCommand}"
            HeightRequest="70"
            WidthRequest="70"
            />
        <ImageButton
            Grid.Column="1"
            Grid.Row="0"
            Source="add.png"
            Command="{Binding NavigateToProductSaveViewCommand}"
            HeightRequest="70"
            WidthRequest="70"
            />
        <Label
            Text="Catalog"
            Grid.Row="1"
            Grid.Column="0"
            HorizontalOptions="Center"
            />
        <Label
            Text="New Product"
            Grid.Row="1"
            Grid.Column="1"
            HorizontalOptions="Center"
            />
        
        </Grid>
</ContentPage>