<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Epr3.Views.ClientSaveView"
             Title="ClientSaveView">
    <VerticalStackLayout Padding="15">
        <Entry
            Placeholder="Name"
            Text="{Binding Client.Name }"/>
        <Entry
            Placeholder="CPF or CNPJ"
            Text="{Binding Client.RegisterPerson }"/>
        <Entry
            Placeholder="Email"
            Text="{Binding Client.Email }"/>
        <Entry
            Placeholder="Address"
            Text="{Binding Client.Address }"/>
        <Entry
            Placeholder="Reference Point"
            Text="{Binding Client.ReferencePoint }"/>
        <Entry
            Placeholder="Telephone"
            Text="{Binding Client.Telephone }"/>
        <Entry
            Placeholder="Observation"
            Text="{Binding Client.Observation }"/>
        <Button
            Text="Save Client"
            Command="{Binding ClientSaveCommand}"/>
    </VerticalStackLayout>
</ContentPage>